page{
  width: 100%;
  height: 100%;
  padding: 0rpx;
  margin: 0rpx;
}
.choiceContainer{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  
  width: 100%;
  height: 100%;
  
}
.panelContainer{
  position:absolute;
  top:0rpx;
  left:0rpx;
  
  width:100%;
  height:100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  z-index: 99;
}
.panel{
  width: 80%;
  height: 80%;
  box-shadow: 0 0 10rpx #888;
  border-radius: 20rpx;
  background: white;
  display: flex;
  justify-content: center;
  flex-direction: column
}
.top{
  width: 100%;
  height: 35%;
  margin-bottom: 100rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.text1{
  margin:0 auto;
  width: 90%;
  height: 20%;
  font-weight: bold;
  font-size: 40rpx;
}
.text2{
  margin:0 auto;
  width: 90%;
  height: 12%; 
  color: rgb(136,136,136);
  font-size: 30rpx;
}
.targetTop{
  margin: 0 auto;
  width: 90%;
  height: 30%; 
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.targetTop view{
  display: flex;
  justify-content: center;
  align-items: center;
  border:1px solid rgb(187,187,187);
  margin-right: 40rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.targetTop view:nth-child(1){
  width: 30%;
  height: 60%;
}
.targetTop view:nth-child(2){
  width: 40%;
  height: 60%;
}
.targetBottom{
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.targetBottom view{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 35rpx;
  border:1px solid rgb(187,187,187);
  font-size: 30rpx;
  border-radius: 10rpx;
  width: 35%;
  height: 60%;
}
.bottom{
  width: 100%;
  height: 35%;
}
.nextStep{
  width: 50%;
  height: 8%;
  border:1px solid #ccc;
  border-radius: 50rpx;
  background: #7BBAFF;
  color: white;
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


