page{
  width: 100%;
  height: 100%;
  padding: 0rpx;
  margin: 0rpx;
  position: relative;
  background: rgb(239,238,241);
}

.index-container {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width:100%;
  height: 100%;
}
.awardMark{
  width: 80%;
  height: 80%;
  background: white;
  position: absolute;
  left: 10%;
  top: 5%;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx black;
  padding: 40rpx;
  box-sizing:border-box;
}
.title1{
  margin-top: 60rpx;
  font-size: 50rpx;
  font-weight: bold;
}
.title2{
  color: rgb(125,125,125);
  font-size: 30rpx;
  margin-top: 15rpx;
}
.award{
    margin-top: 40rpx;
    width: 100%;
    height: 60rpx;
}
.num{
  float: left;
  margin-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 50rpx;
}
.awardInput{
  height: 30rpx;
  width: 80%;
  padding:10rpx;
  float: left;
  border:1px solid #ccc;
}
.finish{
  width: 60%;
  height: 60rpx;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx auto;
  border: 1px solid white;
  border-radius: 10rpx;
  background: rgb(123,186,255);
  color: white;
}