page{
  background: rgb(248, 251, 252);
}
.topRect{
  background: rgb(90, 149, 255);
  width: 100%;
  height: 170rpx;
  position: absolute;
}
.dw{
  background-color: white;
  width: 90%;
  left: 5%;
  top: 40rpx;
  height: 250rpx;
  position: absolute;
  border-radius: 5rpx;
  box-shadow:0px 0px 10px 2px rgba(0, 0, 0, 0.11);
  display: flex;
  align-items: center;
}
.dwImg{
  width: 170rpx;
  height: 170rpx;
  margin-left: 50rpx;
  margin-right: 30rpx;
}
.dwText{
  font-size: 50rpx;
  font-weight: bolder;
  color: rgb(144, 144, 144);
}
.star{
  width: 35rpx;
  height: 35rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.function{
  width: 90%;
  left: 5%;
  position: absolute;
  top: 290rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.functionName{
  color: white;
  font-size: 52rpx;
  font-weight: bold;
}
.functionImg{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  right: -60rpx;
}
.functionInfo{
  position: absolute;
  left: 20rpx;
  z-index: 100;
}
.functionCard{
  margin-top: 50rpx;
  box-shadow:0px 0px 10px 1px rgba(0, 0, 0, 0.11);
  border-radius: 5rpx;
  width: 45%;
  height: 190rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  position: relative;
}
.functionDetail{
  font-size: 25rpx;
  margin-top: 15rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.5)
}
.store{
  background-color: rgb(109, 161, 255);
}
.ranking{
  background-color: rgb(248, 110, 108);
}
.tongji{
  background-color: rgb(94, 221, 180);
}
.setting{
  background-color: rgb(146, 146, 147);
}
